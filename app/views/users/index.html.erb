<div class="container">
    <div class="row">
      <div class="col-md-10 offset-md-1">
        <h2>ユーザー 一覧</h2>
        <table class="table table-hover table-inverse">
          <thead>
              <tr></tr>
              <th>ニックネーム</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr></tr>
              <tr>
               <td><%= user.name %></td>
               <td><%= link_to "詳細ページへ", user_path(user.id), :class => "text-info" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
</div>