<div class="container">
    <div class="row">
      <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
        <table class="table table-hover table-inverse">
          <thead>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
               <td><%= user.name %></td>
               <td><%= link_to "Show", user_path(user.id), :class => "text-info" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
</div>