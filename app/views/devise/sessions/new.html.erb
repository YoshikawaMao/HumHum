<div class="container">
  <div class="row">
    <div class="card col-lg-6 col-md-10 col-sm-12 m-auto border-info">
      <div class="card-body">
        <div class="col mx-auto mt-10">
          <h2>ログイン</h2>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.label :ニックネーム %><br />
              <%= f.text_field :name, autofocus: true, class: "form-control col m-auto" %>
            </div>

            <div class="field my-3">
              <%= f.label :パスワード %><br />
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control col m-auto" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>

            <div class="actions">
              <%= f.submit "ログイン", class: "btn btn-outline-secondary btn-block" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>