<!DOCTYPE html>
<html>
  <head>
    <title>HumHum</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-expand-lg">
      <div class="container my-3">
        <span><%= link_to "", root_path, class: "fab fa-earlybirds fa-3x" %></span>
        <% if user_signed_in? %>
          <ul class="navbar-nav">
            <span class="nav-item-content">ようこそ <%= current_user.name %>さん！</span>
            <li class="nav-item mx-2">
              <%= link_to "ハム一覧", hums_path, class: "btn btn-outline-success" %>
            </li>
            <li class="nav-item">
              <%= link_to "ユーザー一覧", users_path, class: "btn btn-outline-success" %>
            </li>
            <li class="nav-item mx-2">
              <%= link_to "トーク一覧", genres_path, class: "btn btn-outline-success" %>
            </li>
            <li class="nav-item mx-2">
              <%= link_to "マイページ", user_path(current_user.id), class: "btn btn-outline-success" %>
            </li>
            <li class="nav-item">
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-outline-success" %>
            </li>
          </ul>
        <% else %>
          <ul class="navbar-nav">
            <li class="nav-item mx-2">
              <%= link_to "ハム一覧", hums_path, class: "btn btn-outline-success" %>
            </li>
            <li class="nav-item mx-2">
              <%= link_to "トーク一覧", genres_path, class: "btn btn-outline-success" %>
            </li>
            <li class="nav-item">
              <%= link_to "about", homes_about_path, class: "btn btn-outline-success" %>
            </li>
            <li class="nav-item mx-2">
              <%= link_to "新規登録", new_user_registration_path, class: "btn btn-outline-success" %>
            </li>
            <li class="nav-item">
              <%= link_to "ログイン", new_user_session_path, class: "btn btn-outline-success" %>
            </li>
          </ul>
        <% end %>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
