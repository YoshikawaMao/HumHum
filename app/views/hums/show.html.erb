<div class="container">
  <div class="row">
    <div class="col text-center">
      <h2>
        <%= @hum.name %>のページ
      </h2>
    </div>
  </div>
  <div class="row">
    <div class="col-6 offset-md-3">
      <div class="box2">
        <table align="center">
          <tr><%= attachment_image_tag @hum, :image, :fill, 100, 100, format: 'jpeg' %></tr>
          <tr>
            <td>性別:<%= @hum.gender %></td>
          </tr>
          <tr>
            <td>種類:<%= @hum.breed %></td>
          </tr>
          <tr>
            <td>年齢:<%= @hum.age %></td>
          </tr>
          <tr>
            <td>性格:<%= @hum.character %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <p>コメント件数：<%= @comments.count %></p>
      <div id="comments_area">
        <%= render partial: 'comments/index', locals: { comments: @comments } %>
      </div>
    </div>
  </div>
</div>