<div class="comtainer">
  <div class="row mt-3">
    <div class="col text-center">
      <h3>
        ハムスター 一覧ページ
      </h3>
    </div>
  </div>
  <div class="row">
    <div class="col-4 text-center">
      <%= link_to "new", new_hum_path %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <table class="table table-hover table-inverse">
        <thead>
         <tr>
           <th></th>
           <th>Title</th>
           <th>Opinion</th>
           <th colspan="3"></th>
         </tr>
        </thead>
        <tbody>
          <% @hums.each do |hum| %>
            <tr>
              <!--<td>-->
                <!--<%#= link_to user_path(book.user) %>-->
                <!--  <%#= attachment_image_tag book.user, :profile_image, :fill, 100, 100, fallback: 'no_image.jpg' %>-->
                <!--<%# end %>-->
              <!--</td>-->
              <td><%= link_to hum.name, hum_path(hum.id), :class => "text-body"%></td>
              <td><%= hum.breed %></td>
              <td><%= hum.character %></td>
              <td><%= link_to "show", hum_path(hum.id) %></td>
              <td><%= link_to "削除する", hum_path(hum.id), method: :delete, :class => "btn btn-outline-danger", data: {confirm: "削除しますか？"} %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>